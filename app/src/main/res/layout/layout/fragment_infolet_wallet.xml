<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_pic_wallet" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:id="@+id/id_infolet_wallet_fragment_wallet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/wallet"
            android:textSize="24sp"/>

        <ImageButton
            android:id="@+id/id_infolet_wallet_fragment_button_update"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerInside"
            android:layout_toEndOf="@id/id_infolet_wallet_fragment_wallet_title"
            android:src = "@drawable/ic_update"/>

    </RelativeLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent">

            <TextView
                android:text="@string/currency"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/id_infolet_wallet_fragment_currency_field"
                android:layout_width="0dp"
                android:text="Indonesian Rupiah (Rp.)"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent">

            <TextView
                android:text="@string/textview_balance"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/id_infolet_wallet_fragment_balance_field"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent">
            <TextView
                android:text="@string/textview_today_income"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/id_infolet_wallet_fragment_today_income_field"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent">
            <TextView
                android:text="@string/textview_today_expense"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/id_infolet_wallet_fragment_today_expense_field"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent">
            <TextView
                android:text="Last transaction"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_infolet_wallet_fragment_date_field"

                android:text="date"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:lines="2"/>

            <TextView
                android:text="/"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textAlignment="center" />

            <TextView
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/id_infolet_wallet_fragment_time_field"
                android:text="@string/time"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="2"/>
        </TableRow>

    </TableLayout>

</LinearLayout>